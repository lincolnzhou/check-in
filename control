#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
BASENAME=`basename ${DIR}`

GOPATH=${PWD%src*}

export GOPATH

function build() {
	cd $DIR/backend
	go build
}

function rundocker() {
	cd $DIR/backend/
	./backend -c config.toml -logtostderr=true
}

function run() {
	cd $DIR/backend
	go run main.go -c config.toml -logtostderr=true
}

function help() {
	echo "$0 build|rundocker|run"
}

if [ "$1" == "build" ]; then
	build
elif [ "$1" == "rundocker" ]; then
	rundocker
elif [ "$1" == "run" ]; then
	run
else 
	help
fi
